{% extends 'base.html.twig' %}

{% block title %}Nos Repas
{% endblock %}

{% block body %}
	<div class="container mt-5 announcement-container">
		<h1>Ici nos menus du Jours</h1>
		<a class="subtitle" aria-current="page" href="{{ path('app_meal') }}">Découvrez les plats à la carte, cliquez ici</a>
		<div class="row">
			{% for menu in menus %}
				<div class="col-md-4">
					<div class="card mb-4">
						<div class="card-body">
							<h5 class="card-title">{{ menu.getNameMenu() }}</h5>
							<p class="card-text">{{ menu.getDescription() }}</p>
							<p class="card-text">
								<strong>Prix :</strong>
								{{ menu.getPriceMenu() }}
								€</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
