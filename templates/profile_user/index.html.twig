{# templates/mon_compte/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
    <div class="container d-flex flex-column align-items-center" id="containerProfil">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('image/PhotoProfil.jpg') }}" class="card-img" alt="{{ app.user.firstName }} {{ app.user.lastName }}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ app.user.firstName }} {{ app.user.lastName }}</h5>
                        <p class="card-text">
                            <strong>Adresse :</strong>
                            {{ app.user.address }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">{{ app.user.email }}</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">{{ app.user.phoneNumber }}</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
