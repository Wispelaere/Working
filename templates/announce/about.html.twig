{% extends 'base.html.twig' %}

{% block title %}À propos{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">À savoir</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('announce_new') }}" class="btn btn-primary mb-3">Créer une nouvelle annonce</a>
        {% endif %}

        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for announce in announces %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ announce.nameAnnounce }}</h5>
                            <p class="card-text">{{ announce.descriptionAnnounce }}</p>
                            <p class="card-text"><small class="text-muted">Envoyé le {{ announce.dateSent|date('d/m/Y H:i') }}</small></p>
                        
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('announce_modify', {'id': announce.id}) }}" class="btn btn-warning">Modifier</a>
                                <form method="post" action="{{ path('announce_delete', {'id': announce.id}) }}" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ announce.id) }}">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune annonce trouvée.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
