{% extends 'base.html.twig' %}

{% block title %}À propos{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">À savoir</h1>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for announce in announces %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ announce.nameAnnounce }}</h5>
                            <p class="card-text">{{ announce.descriptionAnnounce }}</p>
                            <p class="card-text"><small class="text-muted">Envoyé le {{ announce.dateSent|date('d/m/Y H:i') }}</small></p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune annonce trouvée.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
